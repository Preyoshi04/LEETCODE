class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int sum=0;
        //for first k window
        for(int i=0;i<k;i++)
        {
            sum+=nums[i];
        }
        int maxSum=sum;  
        for(int i=k;i<nums.length;i++)  //moving the window
        {
            sum-=nums[i-k];  //decresing the value which is laving the window
            sum+=nums[i];  //adding the value which is including in the window
            maxSum=Math.max(maxSum,sum);
        }
        return (double)maxSum/k;
    }
}
