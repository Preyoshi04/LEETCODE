class Solution {
    public int compress(char[] chars) {
        int n = chars.length;
        int index = 0, i = 0;

        while(i<n)
        {
            char curr_char = chars[i];
            int count = 0;

            while(i<n && chars[i] == curr_char)
            {
                count++;  //counting freq of each char!
                i++;
            }
                chars[index] = curr_char;  //writing the char
                index++;

                if(count > 1)
                {
                    String count_str = String.valueOf(count);;

                    for(char c : count_str.toCharArray())
                    {
                        chars[index] = c;  //writing the count of that char!
                        index++;
                    }
                }
        }
        return index;
    }
}
