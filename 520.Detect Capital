class Solution {
    public boolean detectCapitalUse(String word) {
        int capitalCount = 0;

       for(char c : word.toCharArray())
        {
            if(c >= 'A' && c <= 'Z')
            {
                capitalCount ++;
            }
        }
        if(capitalCount == word.length() || capitalCount == 0 || (capitalCount == 1 && Character.isUpperCase(word.charAt(0))))
        {
            return true;
        }
        return false;
    }
}
