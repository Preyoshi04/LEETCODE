class Solution {
    public int lengthOfLongestSubstring(String s) {
        int maxLength=0;
        int start=0; //initliaze the start pointer as the first char
        HashSet<Character> seen = new HashSet<>();  //to store the unique characters while iterating the string
        //iterate over string using the end pointer
        for(int i=0;i<s.length();i++)
        {
            while(seen.contains(s.charAt(i)))
            {
                seen.remove(s.charAt(start));
                start++;
            }
            seen.add(s.charAt(i));

            maxLength=Math.max(maxLength,(i-start+1));
        }
        return maxLength;
    }
}
